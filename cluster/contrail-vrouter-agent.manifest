{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {"name":"contrail-vrouter-agent"},
    "spec":{
	"hostNetwork": true,
	"containers":[{
	    "name": "contrail-vrouter-agent",
	    "image": "opencontrail/vrouter-agent:2.20",
	    "privileged": "true",
	    "command": ["/bin/bash", "-c", "/usr/bin/contrail-vrouter-agent 1>>/var/log/contrail/contrail-vrouter-agent-stdout.log 2>>/var/log/contrail/contrail-vrouter-agent.err"],
	    "securityContext": {
	    	"capabilities": {
		    "add": ["NET_BIND_SERVICE"]
		}
	    },
	    "ports": [{
		"name": "vrouter-api",
		"containerPort": 9090,
		"hostPort": 9090
	    }, {
		"name": "ipc",
		"containerPort": 9091,
		"hostPort":9091 
	    }, {
		"name": "control-ui",
		"containerPort": 8085,
		"hostPort": 8085
	    }],
	    "volumeMounts": [
		{
		    "name": "config",
		    "mountPath": "/etc/contrail"
		},
		{
		    "name": "logs",
		    "mountPath": "/var/log/contrail",
		    "readOnly": false
		}
              ]
	}],
	"volumes": [{
	    "name": "config",
	    "hostPath": {"path": "/etc/contrail"}
	},{
	    "name": "logs",
	    "hostPath": {"path": "/var/log/contrail"}
	}
       ]
    }
}
